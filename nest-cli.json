{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "mail": {
      "type": "application",
      "root": "apps/mail",
      "entryFile": "main",
      "sourceRoot": "apps/mail/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mail/tsconfig.app.json"
      }
    },
    "weather-app": {
      "type": "application",
      "root": "apps/weather-app",
      "entryFile": "main",
      "sourceRoot": "apps/weather-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/weather-app/tsconfig.app.json"
      }
    }
  }
}