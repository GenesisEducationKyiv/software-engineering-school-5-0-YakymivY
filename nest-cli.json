{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "entryFile": "src/main",
  "monorepo": true,
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "mail": {
      "type": "application",
      "root": "apps/mail",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/mail/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/mail/proto"
          }
        ],
        "watchAssets": true
      }
    },
    "weather-app": {
      "type": "application",
      "root": "apps/weather-app",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/weather-app/tsconfig.app.json",
        "assets": [
          {
            "include": "proto/*.proto",
            "outDir": "dist/apps/weather-app/proto"
          }
        ],
        "watchAssets": true
      }
    }
  }
}